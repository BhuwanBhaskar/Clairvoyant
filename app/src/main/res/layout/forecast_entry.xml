<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:background = "#ff9f00"
                android:paddingLeft="74dp"
                android:paddingRight="32dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iconIV"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@+id/tempCircleIV"
        android:layout_toEndOf="@+id/tempCircleIV"
        android:src="@mipmap/clear_night"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tempCircleIV"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:src="@mipmap/bg_temperature"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dayTV"
        android:paddingLeft="10dp"

        android:layout_toRightOf="@+id/iconIV"
        android:layout_toEndOf="@+id/iconIV"
        android:layout_centerVertical="true"
        tools:text="Wednesday"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tempLabel"
        android:layout_alignBottom="@id/tempCircleIV"
        android:layout_alignTop="@id/tempCircleIV"
        android:layout_alignLeft="@id/tempCircleIV"
        android:layout_alignRight="@id/tempCircleIV"
        android:gravity="center"
        android:textColor="#ff00ff"
        tools:text="100"
        />



</RelativeLayout>